<div class="row">
  <div class="col-lg-12 d-flex">
    <p class="h2 align-self-center p-2">Tipos de Livro</p>
    <%= link_to new_admins_backoffice_book_type_path, class:"btn btn-success btn-circle btn-sm align-self-center" do %>
      <i class="fa fa-plus"></i>
    <% end %> 
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm">
    <thead>
      <tr>
        <th><%= @book_types.model.human_attribute_name(:description) %></th>
        <th>               
        </th>
      </tr>
    </thead>
    <tbody>
      <% @book_types.each do |book_type| %>
      <tr>
        <td><%= book_type.description %></td>
        <td style="width: 90px">
          <%= link_to edit_admins_backoffice_book_type_path(book_type), 
            class:"btn btn-primary btn-circle btn-sm" do %>
            <i class="fa fa-edit"></i>
          <% end %>
          <%= link_to admins_backoffice_book_type_path(book_type), 
            method: :delete, 
            class:"btn btn-danger btn-circle btn-sm", 
            data: { confirm: "Tem certeza?"} do %>
            <i class="fa fa-minus"></i>
          <% end %>
          </button>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%#= paginate @book_types %>
</div>