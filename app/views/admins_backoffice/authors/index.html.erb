<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">Autores</h1>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm">
    <thead>
      <tr>
        <th><%= @authors.model.human_attribute_name(:description) %></th>
        <th>
          <%= link_to new_admins_backoffice_author_path, class:"btn btn-success btn-circle btn-sm" do %>
            <i class="fa fa-plus"></i>
          <% end %>                
        </th>
      </tr>
    </thead>
    <tbody>
      <% @authors.each do |author| %>
      <tr>
        <td><%= author.description %></td>
        <td style="width: 90px">
          <%= link_to edit_admins_backoffice_author_path(author), 
            class:"btn btn-primary btn-circle btn-sm" do %>
            <i class="fa fa-edit"></i>
          <% end %>
          <%= link_to admins_backoffice_author_path(author), 
            method: :delete, 
            class:"btn btn-danger btn-circle btn-sm", 
            data: { confirm: "Tem certeza?"} do %>
            <i class="fa fa-minus"></i>
          <% end %>
          </button>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @authors %>
</div>