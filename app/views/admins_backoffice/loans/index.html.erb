<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">Empr√©stimos</h1>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm">
    <thead>
      <tr>
        <th><%= @loans.model.human_attribute_name(:book) %></th>
        <th><%= @loans.model.human_attribute_name(:description) %></th>
        <th><%= @loans.model.human_attribute_name(:loaned_at) %></th>
        <th><%= @loans.model.human_attribute_name(:returned_at) %></th>
        <th>
          <%= link_to new_admins_backoffice_loan_path, class:"btn btn-success btn-circle btn-sm" do %>
            <i class="fa fa-plus"></i>
          <% end %>                
        </th>
      </tr>
    </thead>
    <tbody>
      <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.book.title %></td>
        <td><%= loan.description %></td>
        <td><%= loan.loaned_at.strftime('%d-%m-%Y') %></td>
        <td><%= loan.returned_at.try(:strftime, '%d-%m-%Y') %></td>
        <td style="width: 90px">
          <%= link_to edit_admins_backoffice_loan_path(loan), 
            class:"btn btn-primary btn-circle btn-sm" do %>
            <i class="fa fa-edit"></i>
          <% end %>
          <%= link_to admins_backoffice_loan_path(loan), 
            method: :delete, 
            class:"btn btn-danger btn-circle btn-sm", 
            data: { confirm: "Tem certeza?"} do %>
            <i class="fa fa-minus"></i>
          <% end %>
          </button>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @loans %>
</div>