<div class="row">
  <div class="col-lg-12 d-flex">
    <p class="h2 p-2">Administradores</p>
    <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle btn-sm align-self-center" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm">
      <thead>
          <tr>
            <th><%= @admins.model.human_attribute_name(:email) %></th>
            <th></th>
          </tr>
      </thead>
      <tbody>
          <% @admins.each do |admin| %>
          <tr>
              <td><%= admin.email %></td>
              <td style="width: 90px">

                <%= link_to edit_admins_backoffice_admin_path(admin), 
                  class:"btn btn-primary btn-circle btn-sm" do %>
                  <i class="fa fa-edit"></i>
                <% end %>

                <%= link_to admins_backoffice_admin_path(admin), 
                  method: :delete, 
                  class:"btn btn-danger btn-circle btn-sm", 
                  data: { confirm: "Tem certeza?"} do %>
                  <i class="fa fa-minus"></i>
                <% end %>

              </td>
          </tr>
          <% end %>
      </tbody>
  </table>
  <%= paginate @admins %>
</div>