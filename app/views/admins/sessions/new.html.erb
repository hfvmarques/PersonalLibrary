<div class="row justify-content-center">
  <div class="col-xl-10 col-lg-12 col-md-9">
    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-12">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Log in - Admin</h1>
              </div>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"user") do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, class:"form-control form-control-user", id:"exampleInputEmail", placeholder:"Insira seu e-mail" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, class:"form-control form-control-user", id:"exampleInputPassword", placeholder:"Senha" %>
                </div>
                <div class="form-group">
                  <% if devise_mapping.rememberable? %>
                    <div class="custom-control custom-checkbox small">
                      <label class="custom-control-label" for="customCheck">
                        <%= f.check_box :remember_me, class:"custom-control-input", id:"customCheck" %>Lembrar-me
                      </label>
                    </div>
                  <% end %>
                </div>
                <%= f.submit "Login", class:"btn btn-primary btn-user btn-block" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
