<div class="container">
  <div class="row">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover table-sm">
        <thead>
          <tr>
            <th><%= @books.model.human_attribute_name(:title) %></th>
            <th><%= @books.model.human_attribute_name(:author) %></th>
            <th><%= @books.model.human_attribute_name(:publisher) %></th>
            <th><%= @books.model.human_attribute_name(:published_at) %></th>
            <th><%= @books.model.human_attribute_name(:edition) %></th>
            <th><%= @books.model.human_attribute_name(:book_type) %></th>
            <th><%= @books.model.human_attribute_name(:subject) %></th>
            <th><%= @books.model.human_attribute_name(:active_loan) %></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td>
              <% book.authors.each do |i| %>
                <p>
                  <%= link_to i.description, site_search_author_path(i.id, i.description) %>          
                </p>
              <% end %>
            </td>
            <td><%= link_to book.publisher.description, site_search_publisher_path(book.publisher.id, book.publisher.description) %></td>
            <td><%= book.published_at %></td>
            <td><%= book.edition %></td>
            <td><%= link_to book.book_type.description, site_search_book_type_path(book.book_type.id, book.book_type.description) %></td>
            <td>
              <% book.subjects.each do |i| %>
                <p>
                  <%= link_to i.description, site_search_subject_path(i.id, i.description) %>
                </p>          
              <% end %>          
            </td>
            <td><%= human_boolean(book.active_loan) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>